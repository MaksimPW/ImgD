<h2><%= t('devise_for_views.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('devise_for_views.email') %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise_for_views.password') %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('devise_for_views.remember_me') %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('devise_for_views.login') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
