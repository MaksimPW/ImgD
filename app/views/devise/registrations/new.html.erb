<h2><%= t('devise_for_views.signup') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t('devise_for_views.email') %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise_for_views.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> - <%= t('devise_for_views.characters minimum') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('devise_for_views.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise_for_views.signup') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
