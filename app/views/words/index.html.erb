<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table class="table">
  <thead>
    <tr>
      <th>Img-association</th>
      <th>Word</th>
      <th>Description <%= image_tag('eye.png', id: 'eye', size: '16') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= image_tag word.img.url(:medium) %></td>
        <td><%= word.word %></td>
        <td class='Description'><%= word.desc %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Word', new_word_path %>
<br>
<%= will_paginate @words, renderer: BootstrapPagination::Rails %>
<br>

<script>
//View Description
$('body').on('click','#eye', function(){
    $(".Description").toggle(0);
});
</script>
